{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2015",
        "lib": [
            "dom",
            "es2015",
            "es2016",
            "es2017",
            "es5"
        ],
        "allowSyntheticDefaultImports": true,
        "skipLibCheck": true,
        "moduleResolution": "node",
        "importHelpers": true,
    },
    "exclude": [
        "node_modules",
        "dist"
    ]
}