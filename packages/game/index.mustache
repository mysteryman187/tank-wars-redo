        <title>{{title}}</title>
    <style>
        @font-face {
            font-family: handwritten;
            src: url('assets/fonts/font_scribble.ttf');
            font-weight:400;
            font-weight:normal;
        }
        .fontLoader {
            position: absolute;
            left: -1000px;
            visibility: hidden;
        }

        .modal {
            user-select: none;
            position: fixed;
            top: 0px;
            left: 0px;
            width: 100%;
            height: 100%;
            z-index: 99;
            background-color: rgba(180,180,180, 0.8);
            display: flex;
            justify-content: center;
            align-items: center;
            font-family: courier;
        }
        .modal-dialog{
            width: 50%;
            height: 25%;
            display: flex;
            flex-direction:column;
            justify-content: center;
            align-items: center;
            background-color: #f1d39d;;
            border-radius: 6px;
            box-shadow: 3px 6px 15px 3px;
            padding: 25px;
        }
        .modal-button {
            display: flex;
            justify-content: center;
            align-items: center;
            width: 20%;
            height: 20%;
            background-color: #b1986b;;
        }
        .modal-button:hover {
             background-color:#d2ae6c;
        }
        .modal-text{
            padding: 25px;
        }
    </style>

    </head>
    <body>
        <div id="prev">
    
        </div>
        <div class="modal">
            <div class="modal-dialog">
                <div class="modal-text">Game can only be played in fullscreen.</div>
                <div class="modal-button">OK</div>
            <div>
        </div>
        <div class='fontLoader' style='font-family: handwritten;'>-</div>
    </body>
</html>